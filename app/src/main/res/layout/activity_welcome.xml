<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:src="@drawable/ic_welcome"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_welcome_sign_in"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="17sp"
            android:paddingTop="6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:textColor="@color/white"
            android:background="@drawable/welcome_sign_in_bg"
            android:text="@string/welcome_sign_in" />

        <TextView
            android:id="@+id/tv_welcome_sign_up"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="17sp"
            android:layout_marginTop="18dp"
            android:paddingTop="6dp"
            android:textColor="#fa9230"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:background="@drawable/welcome_sign_up_bg"
            android:text="@string/welcome_sign_up" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_welcome_version"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:text="Version 1.0.0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>
</FrameLayout>